{
  "name": "whitehouse-actions-tracker",
  "version": "1.0.0",
  "description": "A full-stack application for tracking White House Presidential Actions.",
  "main": "server/server.js",
  "type": "module",
  "scripts": {
    "start": "npm run start:server & npm run start:client",
    "start:server": "NODE_ENV=production node server/server.js",
    "start:client": "parcel serve public/index.html",
    "dev": "npm run dev:server & npm run dev:client",
    "dev:server": "NODE_ENV=development nodemon server/server.js",
    "dev:client": "parcel serve public/index.html",
    "build": "parcel build public/index.html",
    "test": "jest --watchAll",
    "lint": "eslint .",
    "prettier": "prettier --write ."
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "node-fetch": "^3.3.2",
    "rate-limiter-flexible": "^2.4.5",
    "redis": "^4.6.13",
    "regenerator-runtime": "^0.14.1"
  },
  "devDependencies": {
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "parcel": "^2.12.0",
    "prettier": "^3.2.4",
    "postcss": "^8.4.38",
    "autoprefixer": "^10.4.19"
  },
  "browserslist": [
    "defaults"
  ],
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "keywords": [
    "whitehouse",
    "presidential-actions",
    "tracker",
    "government-api"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/oliruff/whitehouse-actions-tracker"
  },
  "author": "oliruff",
  "license": "MIT"
}
